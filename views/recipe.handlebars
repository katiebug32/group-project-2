<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Recipe</h5>  
          <p>
            <strong>ID</strong>: <span id="recpID">{{recipe.id}}</span></p>
          <p>
          <p>
            <strong>Text</strong>: {{recipe.recipeName}}</p>
          <p>
            <strong>Ingredients:</strong> </p>
            <ul id="ingredient-list" class="list-group">
              {{#each recipe.Ingredients}}
              <li class="list-group-item">
                <p>{{this.ingredient}}</a>
                <button data-id="{{this.id}}" class="btn btn-danger float-right delete">ｘ</button>
              </li>
              {{/each}}
            </ul>
            <form class="clearfix mb-4">
              <div class="form-group">
                <label for="recipe-text">Add an ingredient</label>
                <input type="text" id="ingredient-text" class="form-control" aria-describedby="ingredient-text" placeholder="Beef">
              </div>
              <button id="submit-ingredient" class="btn btn-primary float-right">Submit</button>
            </form>
            <a href="/">← Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/app.js"></script>